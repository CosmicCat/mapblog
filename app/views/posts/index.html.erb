<style type="text/css">
      /* otherwise stuff gets hidden under the top nav */
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
</style>

<div class="container">
  <div class="row">
    <div class="span2">
      <ul class="nav nav-pills nav-stacked">
	<p><h4>Post History</h4></p>
	<% @posts.each do |post| %>
	<li><%= post.generate_link() %></li>
	<% end %>
      </ul>
    </div>
    <div class="span10">
      <div class="page-header">
        <h1>Blog Posts</h1>
      </div>
      <% if @current_post_no.present? %>
        <%= render :partial => "shared/single_post", :locals => {:post => @current_post} %>
      <% else %>
        <% @posts.each do |post| %>
        <%= render :partial => "shared/single_post", :locals => {:post => post} %>
        <br />
        <% end %>
      <% end %>
    </div>
  </div>
</div>
