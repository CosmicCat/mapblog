<div class="container">

  <div class="hero-unit">
    <h1>map@home</h1>
    <p>Hello World! Welcome to my home on the internets. </p>
  </div>

  <style>
    .menu {
      width:100%;
      display: table;
    }
    .menu-element {
      margin-bottom:30px;
      border: 1px solid;
    }
    .menu-element-text {
      display:table-cell;
      height:100px;
      vertical-align:middle;
      text-align:center;
      font-family:Lucida Grande’, ‘Lucida Sans Unicode’, Lucida, Verdana, Helvetica, Arial, sans-serif;
      font-size:4em;
      color:black;
    }
    .text-right {
      text-align:right;
      padding-right:80px;
      border-left:1px solid;
    }
    .text-left {
      text-align:left;
      padding-left:80px;
      border-right:1px solid;
    }
    .menu-element-image {
      display:table-cell;
    }
  </style>


  <div class="menu">
    <div class="menu-element">
      <a href="/posts" style="text-decoration: none">
	<div class="menu-element-text text-left" style="background-color:#9E71B1;">Blog Posts</div>
	<div class="menu-element-image"><%= image_tag("rect-city.jpg") %></div>
      </a>
    </div>

    <div class="menu-element">
      <a href="/posts" style="text-decoration: none">
	<div class="menu-element-image"><%= image_tag("rect-beach.jpg") %></div>
	<div class="menu-element-text text-right"  style="background-color:#D4B587;">Backpacking</div>
      </a>
    </div>

    <div class="menu-element">
      <a href="/posts" style="text-decoration: none">
	<div class="menu-element-text text-left"  style="background-color:#7276B3;">Software</div>
	<div class="menu-element-image"><%= image_tag("rect-sand.jpg") %></div>
      </a>
    </div>

    <div class="menu-element">
      <a href="/posts" style="text-decoration: none">
	<div class="menu-element-image"><%= image_tag("rect-lily.jpg") %></div>
	<div class="menu-element-text text-right"  style="background-color:#B37E72;">PC&nbsp;Gaming</div>
      </a>
    </div>

  </div>

</div> <!-- /container -->

<script type="text/javascript">
  $(document).ready(function() {

    var resizeMenu = function() {
      var blockWidth = $(".menu").outerWidth();
      // fudge: image 200, borders 3, padding 80
      var textBlockSize = blockWidth - 200 - 3 - 80;

      $(".menu-element-text").each(function() {
        $(this).width(textBlockSize);
      });
    }

    $(window).resize(function() {
      resizeMenu();
    });

    $(".menu-element").hover(
      function () {
        $(this).children().children(".menu-element-text")
          .effect("highlight", {color: "#89B372"}, 1250);  
      },
      function () {}
    );

    resizeMenu();
  });
</script>
